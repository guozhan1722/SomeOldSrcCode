#START=60
BIN=xl2tpd
RUN_D=/var/run
PID_F=$RUN_D/nxl2tpd-wan2.pid
CONF_F=/etc/xl2tpd/xl2tpd-wan2.conf

start() {
	mkdir -p $RUN_D/$BIN
        $BIN -c $CONF_F -p $PID_F -C $RUN_D/$BIN/nwan2-control
}

stop() {
	[ -f $PID_F ] && kill $(cat $PID_F)
}
